  },
  "icons": {
    "16": "assets/images/logo-16.png",
    "128": "assets/images/logo-128.png"
  },
  "permissions": [
    "http://muslimsalat.com/*",
    "http://localhost/*",
    "storage",
    "alarms",
    "background",
    "notifications"
  ]
}
