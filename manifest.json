{
  "name": "Pernik 2015",
  "description": "The Application of Kamus FT",
  "version": "0.2",
  "manifest_version": 2,
  "app": {
    "background": {
      "scripts": [
        "assets/js/jquery.min.js",
        "core/initialResources.js",
        "core/onInstalled.js",
        "core/onLaunched.js",
        "core/getFromTwitter.js",
        "core/onAlarms.js"
